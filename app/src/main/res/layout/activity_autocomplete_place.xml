<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blue_shade_1"
    android:layout_gravity="center_horizontal"
    tools:context=".AutocompletePlace">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_place"
        android:backgroundTint="@color/white"
        android:hint="Enter address:"
        android:textSize="20dp"
        android:fontFamily="@font/baloo"
        android:padding="16dp"
        android:layout_marginTop="300dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:layout_gravity="center_vertical"
        android:background="@drawable/custom_button_back"></EditText>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_places"
        android:textColor="@color/design_default_color_primary"
        android:fontFamily="monospace"
        android:backgroundTint="@color/white"
        android:background="@drawable/custom_button_back"
        android:padding="12dp"
        android:layout_marginTop="32dp"/>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_places2"
        android:background="@drawable/custom_button_back"
        android:backgroundTint="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        ></TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_address_btn"
        android:background="@drawable/custom_button_back"
        android:fontFamily="@font/baloo"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:layout_gravity="center"
        android:text="Save" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_address_btn"
        android:fontFamily="@font/baloo"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/custom_button_back"
        android:backgroundTint="@color/quantum_googred"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancel" />


</LinearLayout>