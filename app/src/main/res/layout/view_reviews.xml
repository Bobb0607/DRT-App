<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title_review_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Reviews"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearlayout_your_review"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_your_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:layout_marginLeft="25dp"
                android:text="Your Review"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_your_review_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Your Review Here" />

            <RatingBar
                android:id="@+id/ratingBar_your_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" />

            <TextView
                android:id="@+id/textView_your_rating_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Your Review Here"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_edit_review"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/custom_button_back"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/textView_delete_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/custom_button_back"
                    android:backgroundTint="@color/quantum_googred"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Delete"
                    android:paddingHorizontal="10dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_record_filer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No review(s) yet"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/listview_reviews"
            android:layout_width="match_parent"
            android:layout_height="250dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCloseViewReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_back"
            android:backgroundTint="#0099d1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="20dp">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>