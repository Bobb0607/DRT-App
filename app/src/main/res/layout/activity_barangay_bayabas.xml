<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_shade_1"
        tools:context=".BarangayBayabasCaves">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="In Barangay Bayabas, Batong Palaka and puning serves as one of the beautiful caves in DRT tourist destinations. Visitors enjoy the rock formations of Batong Palaka and well-preserved, the cave features a spring of the Puning Cave."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_slider" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Welcome to Barangay Bayabas"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="340dp"
            android:layout_height="280dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_roundcorners"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="1200"
            app:iss_period="1000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView49">

        </com.denzcoskun.imageslider.ImageSlider>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button51"
            android:layout_width="116dp"
            android:layout_height="44dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="159dp"
            android:background="@drawable/custom_button_back"
            android:onClick="Caves"
            android:fontFamily="@font/baloo"
            android:text="Caves"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45"
            app:layout_constraintVertical_bias="0.188" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>