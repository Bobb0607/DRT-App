<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView_delete_itinerary_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0099d1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Delete Itinerary"
            android:textColor="@color/white"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/textView_itinerary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|start"
            android:text="Are you sure you want to delete this itinerary?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitDeleteItinerary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_back"
            android:backgroundTint="#0099d1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Delete Itinerary"
            android:textColor="@color/white"
            android:textSize="20dp">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>