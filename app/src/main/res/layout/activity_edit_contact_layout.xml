<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_contact_layout"
    android:background="@color/blue_shade_1">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_contact_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="140dp"
        android:textSize="20dp"
        android:fontFamily="@font/baloo"
        android:background="@drawable/custom_button_back"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/edit_contact_number"
        app:layout_constraintStart_toStartOf="@+id/edit_contact_number"
        app:layout_constraintTop_toBottomOf="@+id/edit_contact_number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="140dp"
        android:background="@drawable/custom_button_back"
        android:backgroundTint="@color/quantum_googred"
        android:text="Cancel"
        android:fontFamily="@font/baloo"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/save_contact_btn"
        app:layout_constraintStart_toStartOf="@+id/save_contact_btn"
        app:layout_constraintTop_toBottomOf="@+id/save_contact_btn" />

    <EditText
        android:id="@+id/edit_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="phone"
        android:padding="15dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>