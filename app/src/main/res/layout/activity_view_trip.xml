<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idViewTrip"
    android:background="@color/grey"
    tools:context=".view_trip">

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/idRVtrips"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <ProgressBar
      android:id="@+id/idPBloading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/idBTNaddfab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:src="@drawable/ic_baseline_add_24"
      app:tint="@color/white" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="100dp"
      android:clickable="true"
      app:backgroundTint="#74D8D8D8"
      app:srcCompat="@drawable/ic_baseline_question_mark_24"
      tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>