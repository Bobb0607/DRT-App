<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_shade_1">

        <TextView
            android:id="@+id/idTVspotname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Spot"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <ImageView
            android:id="@+id/idIVtrip"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/fullbg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/idTVdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVspotname"
            android:text="description"></TextView>

        <TextView
            android:id="@+id/idTVtripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVtrip"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/baloo"
            android:padding="4dp"
            android:text="Trip Name"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/idTVendDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVtrip"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/baloo"
            android:padding="4dp"
            android:text="End date"
            android:textColor="@color/white"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/idTVstartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVtrip"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="3dp"
            android:layout_toStartOf="@+id/idTVendDate"
            android:fontFamily="@font/baloo"
            android:padding="4dp"
            android:text="Start date"
            android:textColor="@color/white"
            android:textSize="15sp"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/renameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVtripName"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/custom_button_back"
            android:text="rename"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVtripName"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/renameBtn"
            android:background="@drawable/custom_button_back"
            android:text="delete"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</androidx.cardview.widget.CardView>